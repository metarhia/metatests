{
  "name": "metatests",
  "version": "0.9.0",
  "author": "Timur Shemsedinov <timur.shemsedinov@gmail.com>",
  "description": "Simple to use test engine for Metarhia technology stack",
  "license": "MIT",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/metarhia/metatests"
  },
  "keywords": [
    "test",
    "testing",
    "unittesting",
    "unit-testing",
    "tdd",
    "tap",
    "metarhia"
  ],
  "bugs": {
    "url": "https://github.com/metarhia/metatests/issues"
  },
  "main": "metatests.js",
  "exports": {
    ".": {
      "require": "./metatests.js",
      "import": "./metatests.mjs"
    }
  },
  "bin": {
    "metatests": "bin/cli.js"
  },
  "types": "types/metatests.d.ts",
  "files": [
    "bin/*.js",
    "lib/",
    "types/"
  ],
  "scripts": {
    "test": "npm run lint && npm run types && node --test",
    "types": "tsc -p tsconfig.json",
    "lint": "eslint . && prettier --check \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/*.ts\"",
    "fix": "eslint . --fix && prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/*.ts\""
  },
  "engines": {
    "node": "18 || 20 || 21 || 22 || 23"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "eslint": "^9.10.0",
    "eslint-config-metarhia": "^9.0.7",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
